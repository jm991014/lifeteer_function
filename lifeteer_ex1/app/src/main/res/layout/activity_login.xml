<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/mindset_bi"
        android:layout_width="103dp"
        android:layout_height="73dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/mindset_bi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="150dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:text="마음을 정리하는 시간,"
        android:gravity="center"
        android:textColor="@color/mindset_main_green"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mindset_bi" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마음짓기"
        android:gravity="center"
        android:textColor="@color/mindset_main_green"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_1" />

    <Button
        android:id="@+id/btn_kakao"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/kakaotalk_yellow"
        android:text="카카오톡으로 시작하기"
        android:textColor="@color/mindset_main_black"
        app:layout_constraintBottom_toTopOf="@+id/btn_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/mindset_main_background"
        android:text="이메일로 시작하기"
        android:textColor="@color/mindset_main_green"
        app:layout_constraintBottom_toTopOf="@+id/txt_login1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:text="이미 가입하셨나요?"
        android:textColor="@color/mindset_main_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mindset_main_background"
        android:text="로그인"

        android:textColor="@color/mindset_main_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_login1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>